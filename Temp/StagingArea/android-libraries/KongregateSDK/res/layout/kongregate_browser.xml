<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:background="@drawable/kongregate_webview_background"
        >

    <RelativeLayout
            android:id="@+id/kongregate_toolbar"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="@drawable/kongregate_toolbar_gradient">

        <ImageView
                android:id="@+id/kongregate_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/kongregate_toolbar_logo"
                android:onClick="onReloadButtonClicked"
                android:layout_alignParentTop="false"
                android:layout_alignTop="@+id/kongregate_toolbar_close_button"
                android:layout_alignBottom="@+id/kongregate_toolbar_close_button"
                android:scaleType="centerInside"
                android:layout_centerInParent="true"
                android:adjustViewBounds="false"
                android:visibility="visible"/>

        <ImageButton
                android:id="@+id/kongregate_toolbar_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/kongregate_toolbar_menu_selector"
                android:onClick="onMenuButtonClicked"
                android:layout_alignParentLeft="true"
                android:enabled="false"
                android:layout_alignParentTop="true"/>

        <ImageView
                android:id="@+id/kongregate_toolbar_close_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/kongregate_toolbar_close_button_x"
                android:onClick="onCloseButtonClicked"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <FrameLayout
            android:id="@+id/kongregate_panel_frame_left"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_below="@id/kongregate_toolbar"
            android:background="#a70000"
    />

    <FrameLayout
            android:id="@+id/kongregate_panel_frame_right"
            android:layout_width="4dp"
            android:layout_height="match_parent"
            android:layout_below="@id/kongregate_toolbar"
            android:layout_alignParentRight="true"
            android:background="#a70000"
    />

    <FrameLayout
            android:id="@+id/kongregate_panel_frame_bottom"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_alignParentBottom="true"
            android:background="#a70000"
    />

    <ProgressBar
            android:id="@+id/kongregate_progress_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:indeterminateOnly="true"
            android:layout_centerInParent="true"
            android:visibility="visible"
            />

    <FrameLayout
            android:id="@+id/kongregate_webview_holder"
            android:layout_below="@+id/kongregate_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/kongregate_panel_frame_left"
            android:layout_toLeftOf="@id/kongregate_panel_frame_right"
            android:layout_above="@id/kongregate_panel_frame_bottom"
            android:focusable="true"
            android:background="@drawable/kongregate_webview_background"
            android:visibility="gone"
            />
</RelativeLayout>
